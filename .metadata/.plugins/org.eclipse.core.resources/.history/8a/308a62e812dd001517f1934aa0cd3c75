class Solution(object):
    def ispal(self, s):
        print("here")
        if (s==s[::-1]):
            return True
        else:
            return False
            
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: str
        """
        longest = ""
        if (len(s)==1):
            return s
        for i in range(0,len(s)):
            for j in range(i,len(s)):
                if (ispal(self,s[i:j+1])):
                    if (len(s[i:j+1])>len(longest)):
                        longest=s[i:j+1]
        return longest
    
    longestPalindrome("ace")