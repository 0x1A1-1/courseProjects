def answer(str_S):
    # your code here
    S = int(str_S)
    return str(check(S))
        
def check(s):
    if s==0:
        return 0
    elif s==1:
        return 1
    elif s==2:
        return 2
    even = float(s/2)
    print(even)
    if even == int(even):
        return check(even) + check(even+1) + even
    else:
        odd = (s-1)/2
        return check(odd-1) + check(odd) +1
print(check(7))